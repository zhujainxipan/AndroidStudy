<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义view"
        />


    <Button
        android:id="@+id/btn_scoller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scoller"
        android:layout_below="@id/btn_view"
        />


    <Button
        android:id="@+id/btn_scollerlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scollerlayout"
        android:layout_below="@id/btn_view"
        />

    <Button
        android:id="@+id/btn_dialogfragment_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dialogfragment"
        android:layout_below="@id/btn_scollerlayout"
        />


    <Button
        android:id="@+id/btn_scroll_view_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scrollveiw 悬停测量"
        android:layout_below="@id/btn_dialogfragment_test"
        />


    <Button
        android:id="@+id/btn_lv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listview 悬停测量"
        android:layout_below="@id/btn_scroll_view_height"
        />

    <Button
        android:id="@+id/btn_dropmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dropmenu 下拉筛选框"
        android:layout_below="@id/btn_lv_height"
        />

    <Button
        android:id="@+id/btn_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画"
        android:layout_below="@id/btn_dropmenu"
        />



</RelativeLayout>
